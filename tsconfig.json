{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		// 独自の設定
		"paths": {
			"src/*": ["*"]
		},
		"baseUrl": "src",
		"noFallthroughCasesInSwitch": true, // switch文のcase内でbreakが無い場合エラーにする
		"noImplicitReturns": true, // 未使用の関数が存在する場合エラーにする
		"noUnusedLocals": true, // 未使用の変数が存在する場合にエラーにする
		"noUnusedParameters": true, // 未使用の仮引数が存在する場合にエラーにする
		"allowSyntheticDefaultImports": true // モジュールにデフォルトのエクスポートがない場合は、「import x from y」を許可する
	},
	"include": ["next-env.d.ts", "src/**/*"],
	"exclude": ["node_modules"]
}
